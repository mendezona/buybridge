// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Item {
    id                Int      @id @default(autoincrement())
    productName       String
    ean               String
    fbmSeller         String
    fba               String
    amazonPrice       Decimal  @db.Decimal(10, 2)
    amazonStockLevel  String
    amazonShippingFee Decimal  @db.Decimal(10, 2)
    amazonLink        String
    kauflandPrice     Decimal  @db.Decimal(10, 2)
    kauflandOffer     String
    kauflandSellerFee Decimal  @db.Decimal(10, 2)
    kauflandLink      String
    createdAt         DateTime @default(now())
    updatedAt         DateTime @updatedAt

    @@index([id])
}
